{
  "cli": {
    "version": ">= 9.2.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "PAGINA_URL": "${PAGINA_URL}",
        "PORT": "${PORT}",
        "DB_HOST": "${DB_HOST}",
        "DB_USER": "${DB_USER}",
        "DB_PASS": "${DB_PASS}",
        "DB_NAME": "${DB_NAME}",
        "DB_PORT": "${DB_PORT}"
      }
    },
    "preview": {
      "android": {
        "buildType": "apk"
      },
      "distribution": "internal",
      "env": {
        "PAGINA_URL": "${PAGINA_URL}",
        "PORT": "${PORT}",
        "DB_HOST": "${DB_HOST}",
        "DB_USER": "${DB_USER}",
        "DB_PASS": "${DB_PASS}",
        "DB_NAME": "${DB_NAME}",
        "DB_PORT": "${DB_PORT}"
      }
    },
    "production": {
      "env": {
        "PAGINA_URL": "${PAGINA_URL}",
        "PORT": "${PORT}",
        "DB_HOST": "${DB_HOST}",
        "DB_USER": "${DB_USER}",
        "DB_PASS": "${DB_PASS}",
        "DB_NAME": "${DB_NAME}",
        "DB_PORT": "${DB_PORT}"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
